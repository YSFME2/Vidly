@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Genre
        </dt>

        <dd>
            @Model.Genre.Name
        </dd>
        <dt>
            Release Date
        </dt>

        <dd>
            @Model.ReleaseDate
        </dd>
        <dt>
            Date Added
        </dt>

        <dd>
            @Model.AddedDate
        </dd>
        <dt>
            Number In Stock
        </dt>

        <dd>
            @Model.NumberInStock
        </dd>

    </dl>
</div>
