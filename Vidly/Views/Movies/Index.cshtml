@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New", "MovieForm", null, new { @class = "btn btn-primary" })
</p>

@if (Model.Count() > 0)
{
    <table id="moviesTable" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>Genre</th>
                <th>Operations</th>
            </tr>
        </thead>
    </table>
}
else
{
    <h3>We don't have Movies yet.</h3>
}


@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#moviesTable").DataTable({
                ajax: {
                    url: '/api/Movies',
                    dataSrc: ''
                },
                columns: [
                    {
                        data: "name",
                        render: function (name, type, movie) {
                            return "<a href='/Movies/" + movie.id + "'>" + name + "</a>"
                        }
                    },
                    {
                        data: "genre"
                    },
                    {
                        data: "id",
                        render: function (id) {
                            return "<a href='/Movies/Edit/" + id + "'>Edit</a><button data-movieid='" + id + "' class='js-delete btn-link'>Delete</button>"
                        }
                    }
                ]
            });
            $("#moviesTable").on("click", ".js-delete", function () {
                var btn = $(this);
                bootbox.confirm("Are you want to delete this Movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Movies/" + btn.attr("data-movieid"),
                            method: "DELETE",
                            success: function () {
                                table.row(btn.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });

        });
    </script>
}